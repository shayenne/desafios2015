import sys
n = int(raw_input())
a = [0, 1]
a.append(raw_input().split())

states = []

for i in xrange(1, n):
    x = i+1
    y = i

    j = 1
    while x > 0 and x <= n:
        if j % 2:
            x -= a[x]
            y += a[x]
        else:
            x += a[x]
            y += a[x]

        if x in states:
            print -1
            exit(0)

print y
