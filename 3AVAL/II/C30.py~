n = int(raw_input())

cont = [0]
soma = 0
media = 0
last = 0
for i in xrange(n):
    op = map(int, raw_input().split())

    if op[0] == 1:
        cont[op[1]+1] += op[2]
        media += op[2]*op[1]
        
    elif op[0] == 2:
        cont.append(op[1] - last)
        media += op[1]
        last = op[1]
        
    elif op[0] == 3:
        cont.pop()
        media -= last
        
        
print media / len(cont)
